                    <%end%>
                <%end%>
            </tr>
        <%end%>

        <tr bgcolor =" #DCDCDC">
            <td><b> Carga Horária</b></td>
            <%for i in 0..8%>
                <%if session[:cargah_d][i]==0%>
                    <td align="center">---</td>
                <%else%>
                    <td align="center"> <%= session[:cargah_d][i] %>  </td>
                     
                <%end%>
            <%end%>
        </tr>
        <tr bgcolor =" #DCDCDC">
            <td><b> Carga Horária Total</b></td>
            <%for i in 0..8%>
                <%if (session[:cargah_b][i]+session[:cargah_d][i])==0%>
                    <td align="center">---</td>
                <%else%>
                    <td align="center"> <%= (session[:cargah_b][i]+session[:cargah_d][i]) %>  </td>
                <%end%>
            <%end%>
    </table>

<%end%>

