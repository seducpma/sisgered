 <%  if  (@historico_aluno.present?) %>
    <% c=0 %>
    <% @historico_aluno.each do |obs|%>
          <b><%= c=c+1%>.</b> <%="#{obs.observacao}" %>  -
          <b>Data: </b> <%  if obs.data.nil?  %>
                            -
                        <%else%>
                            <%=  obs.data.strftime("%d/%m/%Y")%> -
                        <%end%>
      <b> Quem fez:</b> <%= obs.quem%>
    <br/>
    <%end%>
<%end%>

