<h1>Listing funcionarios</h1>

<table>
  <tr>
    <th>Matricula</th>
    <th>Nome</th>
    <th>Nascimento</th>
    <th>Endereco</th>
    <th>Num</th>
    <th>Complemento</th>
    <th>Cep</th>
    <th>Bairro</th>
    <th>Cidade</th>
    <th>Fone</th>
    <th>Cel</th>
    <th>Email</th>
    <th>Unidade</th>
    <th>Funcao</th>
    <th>Setor</th>
    <th>Horario</th>
    <th>Status</th>
    <th>Obs</th>
  </tr>

<% @funcionarios.each do |funcionario| %>
  <tr>
    <td><%=h funcionario.matricula %></td>
    <td><%=h funcionario.nome %></td>
    <td><%=h funcionario.nascimento %></td>
    <td><%=h funcionario.endereco %></td>
    <td><%=h funcionario.num %></td>
    <td><%=h funcionario.complemento %></td>
    <td><%=h funcionario.cep %></td>
    <td><%=h funcionario.bairro %></td>
    <td><%=h funcionario.cidade %></td>
    <td><%=h funcionario.fone %></td>
    <td><%=h funcionario.cel %></td>
    <td><%=h funcionario.email %></td>
    <td><%=h funcionario.unidade %></td>
    <td><%=h funcionario.funcao %></td>
    <td><%=h funcionario.setor %></td>
    <td><%=h funcionario.horario %></td>
    <td><%=h funcionario.status %></td>
    <td><%=h funcionario.obs %></td>
    <td><%= link_to 'Show', funcionario %></td>
    <td><%= link_to 'Edit', edit_funcionario_path(funcionario) %></td>
    <td><%= link_to 'Destroy', funcionario, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

