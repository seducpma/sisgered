<div id="interno2">
<% title "OBSERVACOES", :id =>"observacoes" %>
 <div class="tabs">
   <div id="caixa_titulo">
    <font size="3"><strong>CONSULTA OBSERVAÇÕES</strong></font><br/>
   </div>
  <div class="tabs">
    <% form_remote_tag :url => consulta_observacoes_path, :method => :get,:loading => "$('#status').show()" , :success => "$('#status').hide()" do %>
         <table width="100%" align="center" bgcolor="#DCDCDC" >
          <tr>
            <td>
              <a href="#" class="filtro"><%= radio_button_tag(:type_of, "1") %></a>Por Ano
              <a href="#" class="filtro_unidade"><%= radio_button_tag(:type_of, "2") %></a>Por Disciplina
              <a href="#" class="filtro_professor"><%= radio_button_tag(:type_of, "3") %></a>Por Aluno
              
            </td>
         </tr>
         <tr>
           <td><div class="consulta" style="display:none"> <%= render "consulta1" %> </div>
               <div class="consulta_professor" style="display:none"> <%= render "consulta_nome" %> </div>
               <div class="consulta_unidade" style="display:none"> <%= render "consulta_disciplina" %> </div>
           </td>
         </tr>
        </table>
    <% end %>
    <br/>
    <hr/>
    <div id="relatorio"><div id='status' style='display:none;' align="center" ><%= image_tag("/stylesheets/images/loading.gif") %></div></div>
    <br/>

  <table>
    <tr>
     <td width="6%"align="left" ><%= button_to 'Fechar', home_path, {:method => "get"}  %></td>
     <td align="left"><%= button_to 'Nova Consulta', consultas_observacao_relatorios_path, :title => "Nova Consulta" %></td>
    </tr>
  </table>
 </div>
 </div>
  <br/>
</div>

