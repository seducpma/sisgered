<div id="interno2">
<% title "FAPEA", :id =>"FAPEA" %>
 <div class="tabs">
   <div id="caixa_titulo">
    <font size="3"><strong>CONSULTA FAPEA</strong></font><br/>
   </div>
  <div class="tabs">
    <% form_remote_tag :url => consulta_fapea_path, :method => :get,:loading => "$('#status').show()" , :success => "$('#status').hide()" do %>
      <table width="100%" align="center" bgcolor="#DCDCDC"  >
          <tr>
            <td width="51%">
              <a href="#" class="filtro"><%= radio_button_tag(:type_of, "1") %></a>Por Ano
              <a href="#" class="filtro_fapea"><%= radio_button_tag(:type_of, "2") %></a>Da Unidade <b>*</b>
              <a href="#" class="filtro_unidade"><%= radio_button_tag(:type_of, "3") %></a>Por Aluno(Todos) <b>*</b>
            </td>
            <td width="60%" align="right">(Para imprimir FAPEA de outros anos letivos utilize a opção <b>Por Ano)</b></td>
         </tr>
         <tr>
             
             <td colspan="4">&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp<b>* Ano Letivo atual</b></td>
         </tr>
         <tr>
             <td colspan="2"><div class="consulta" style="display:none"> <%= render "consulta" %> </div>
             <div class="consulta_fapea" style="display:none"> <%= render "consulta_fapea" %> </div>
             <div class="consulta_nome_fapea" style="display:none"> <%= render "consulta_nome" %> </div>
           </td>
         </tr>
        </table>
    <% end %>
    <br/>
    <hr/>
    <div id="relatorio"><div id='status' style='display:none;' align="center" ><%= image_tag("/stylesheets/images/loading.gif") %></div></div>
    <br/>

  <table>
    <tr>
     <td width="6%"align="left" ><%= button_to 'Fechar', home_path, {:method => "get"}  %></td>
     <td align="left"><%= button_to 'Nova Consulta', consultas_relatorios_path, :title => "Nova Consulta" %></td>
    </tr>
  </table>
 </div>
 </div>
  <br/>
</div>

