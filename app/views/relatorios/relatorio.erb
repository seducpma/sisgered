<div class="tabs">
 <div id="caixa_titulo">
     <font size="3"><strong>RELATÓRIO - FAPEA</strong></font><br/>
 </div>
    <div class="tabs">
      <% form_tag relatorio_relatorios_path, :method => 'get' do %>
      <fieldset>
        <table width="100%" align="center" bgcolor="#DCDCDC" >

          <tr>
            <td align="right"><b>Aluno:</b></font>
               &nbsp&nbsp&nbsp<%= select_tag :aluno, options_for_select(@alunos2.collect { |ff| [ff.aluno_nome, ff.id] }.insert(0, '--Selecionar--')) %></td>
            <td align="right" width="10%"> <%= submit_tag "Visualizar", :class => "btn_filtrar" %></td>
          </tr>
       </table>

    <%if @relatorios.present?%>
        <fieldset><legend><font  size=3><b> Relatório</b></font></legend>
          
             <% for relatorio in @relatorios %>
               <table width="100%">
                 <tr bgcolor="#F5F5F5">
                   <td width=20%" align="left"><b>Aluno:</b></td>
                   <td><%=h relatorio.aluno.aluno_nome %></td>
                 </tr>
                 <tr bgcolor="#F5F5F5">
                   <td align="left"><b>Classe:</b></td>
                   <td><%=h relatorio.atribuicao.classe.classe_classe %>&nbsp&nbsp&nbsp&nbsp <b>Disciplina:</b> <%=h relatorio.atribuicao.disciplina.disciplina%>  </td>
                </tr>
                 <tr bgcolor="#F5F5F5">
                   <td width=20%" align="left"><b>Unidade:</b></td>
                   <td><%=h relatorio.atribuicao.classe.unidade.nome %>&nbsp&nbsp&nbsp&nbsp <b>Ano Letivo:</b> <%=h relatorio.ano_letivo %></td>
                </tr>
                 <tr bgcolor="#F5F5F5">
                   <td width=20%" align="left" valign="top"><b>Relatório:</b></td>
                   <td colspan="3"><%=h relatorio.observacao %></td>
                </tr>
                <tr><td colspan="2"> <hr/></td></tr>
             </table>
           <%end%>
           </fieldset>
         <%else%>
              <br/>
              <table  width="100%">
                    <tr>
                      <td align="center"><font size="3" color="red"><b> NÃO SELECIONADO ou NÃO ENCONTRADO </b> </td>
                    </tr>
              </table>
         <%end%>



        </fieldset>
      <% end %>

       <table>
