<div id="interno2">
<% title "CRIANÇAS", :id =>"criancas" %>
 <div class="tabs">
   <div id="caixa_titulo">
    <font size="3"><strong>CLASSIFICAÇÂO GERAL</strong></font><br/>
   </div>
  <div class="tabs">
       <table bgcolor="#DCDCDC" width="100%">
  <tr bgcolor="#DCDCDC" >
            <th width="2%">Nº</th>
            <th width="1%">Nº_Ins- <br/>crição</th>
            <th width="10%">Data/Hora <br/>Inscrição</th>
            <th width="20%">Nome</th>
            <th width="10%">Classe</th>
            <th width="5%">Mãe <br/>Trabalha</th>
            <th width="5%">Mãe <br/>Servidora</th>
            <th width="5%">Irmão <br/>Matriculado</th>
            <th width="5%">Transfe- rência</th>
            <th width="10%">1ªOpção</th>
            <th width="10%">2ªOpção</th>
            <th width="10%">3ªOpção</th>
        </tr>
           <%$t=0%>
           <% @criancas.each do |crianca| %>
           <%$t = $t+1%>
        <tr bgcolor="#F5F5F5" style="font-size:10px">
                <th align="center" width="2%"><%= $t%>º</th>
                <th align="center"><%=h crianca.id%></th>
                <th align="center"><%=h crianca.created_at.strftime("%d/%m/%Y %H:%M")%></th>
                <th align="left"><%=h crianca.nome%></th>
                                 <% if  crianca.grupo_id == 1%>
                                     <th align="center"> BERÇÁRIO I</th>
                                <%else if  crianca.grupo_id == 2%>
                                     <th align="left"> BERÇÁRIO II</th>
                                        <%else if  crianca.grupo_id == 3%>
                                           <th align="center"> MATERNAL I</th>
                                              <%else if  crianca.grupo_id == 4%>
                                                 <th align="center"> MATERNAL I</th>
                                                   <%else if  crianca.grupo_id == 5%>
                                                      <th align="center"> MATERNAL II</th>
                                                       <%else if  crianca.grupo_id == 6%>
                                                         <th align="center"> NÍVEL I</th>
                                                             <%else if  crianca.grupo_id == 7%>
                                                                <th align="center"> NÍVEL II</th>
                                                             <%end%>
                                                       <%end%>
                                                   <%end%>
                                               <%end%>
                                          <%end%>
                                     <%end%>
                                <%end%>
                                   <% if crianca.trabalho == 0 %>
                                      <th align="center">NÃO</th>
                                  <%else%>
                                       <th align="center">SIM</th>
                                  <%end%>
                                  <% if crianca.servidor_publico == 0 %>
                                      <th align="center">NÃO</th>
                                  <%else%>
                                       <th align="center">SIM</th>
                                  <%end%>
                                  <% if crianca.irmao == 0 %>
                                      <th align="center">NÃO</th>
                                  <%else%>
                                      <th align="center">SIM</th>
                                  <%end%>
                                  <% if crianca.transferencia == 0 %>
                                      <th align="center">NÃO</th>
                                   <%else%>
                                       <th align="center">SIM </th>
                                   <%end%>
                <th align="center"><%=h crianca.opcao1%></th>
                <th align="center"><%=h crianca.opcao2%></th>
                <th align="center"><%=h crianca.opcao3%></th>

              <% if current_user.has_role?('admin') or current_user.has_role?('SEDUC') or current_user.has_role?('direcao') or current_user.has_role?('supervisao')%>
              </tr>
               <tr>
                <td align="center"><%= button_to('Visualizar', {:action => "show", :id =>crianca},:method => "get", :title => "Visualizar") %></td>
                <td align="center"><%= button_to 'Editar', {:action => "edit", :id =>crianca.id}, :method => "get", :title => "Editar"%></td>
              </tr>
                <%else%>
                      <td align="center"><%= button_to('Visualizar', {:action => "show", :id =>crianca},:method => "get", :title => "Visualizar") %></td>

                <%end%>
              </tr>
            <% end %>



     </table>
     <table bgcolor="#DCDCDC" width="100%">
      <tr >
        <td colspan="3" align="right"><b>TOTAL INSCRIÇÕES: </b>
            <font color ="red "size="2"><b><%=$t %></b></font>
          </td>
      </tr>
    </table>

  <table>
    <tr>
     <td width="6%"align="left" ><%= button_to 'Fechar', home_path, {:method => "get"}  %></td>
     <td align="left"><%= button_to 'Consultar',  :title => "Consultar" %></td>
    </tr>
  </table>
 </div>
 </div>
  <br/>
</div>

