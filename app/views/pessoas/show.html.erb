               <td colspan="4" align="left">  <%=h @pessoa.pessoa_chegada_brasil.strftime("%d/%m/%Y")%></td>
            </tr>
           <tr bgcolor="#F5F5F5">
               <td align="left"><b>RG:</b></td>
               <td align="left">  <%=h @pessoa.pessoa_RG%></td>
