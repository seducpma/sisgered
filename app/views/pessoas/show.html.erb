               <td colspan="3" align="left"><%=h @pessoa.pessoa_cidade %></td>
            </tr>
            <tr bgcolor="#F5F5F5">
               <td align="left" width="4%"><b>Telefone:</b></td>
               <td align="left"><%=h @pessoa.pessoa_fone_fixo %></td>
               <td align="left"><b>Celular:</b></td>
               <td align="left"><%=h @pessoa.pessoa_fone_cel %></td></td>
               <td align="left"><b>E-mail:</b></td>
               <td colspan="3"align="left"><%=h @pessoa.pessoa_email%></td></td>
            </tr>
            <% if  @pessoa.pessoa_tipo != 'ALUNO'then  %>
            <tr bgcolor="#F5F5F5">
               <td align="left"><b>Estado Civil:</b></td>
               <td align="left"><%=h @pessoa.pessoa_estado_civil %></td></td>
               <td align="left" width="4%"><b>Escolaridade:</b></td>
               <td align="left"><%=h @pessoa.pessoa_escolaridade %></td>
               <td align="left" width="4%"><b>Profissão:</b></td>
               <td colspan="2"align="left"><%=h @pessoa.pessoa_profissao%></td></td>
            </tr>
            <tr bgcolor="#F5F5F5">
              <td width=" 12%"align="left"><b>Local Trabalho:</b></td>
              <td colspan="2"align="left"><%=h @pessoa.pessoa_local_trabalho %></td></td>
