               <td align="left"width="3%"><b>Fone:</b>
               <td align="left"><%=h @pessoa.pessoa_fone_trabalho%></td></td>
            </tr>
            <%end%>
            <tr bgcolor="#F5F5F5">
               <td align="left"><b>Observação::</b></td>
               <td colspan="7" align="left"><%=h @pessoa.pessoa_obs %></td>
            </tr>



         </table>
         </fieldset>

     </td>
