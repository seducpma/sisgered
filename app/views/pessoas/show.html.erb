           <tr bgcolor="#F5F5F5">
               <td align="left"><b>CPF:</b></td>
               <td align="left">  <%=h @pessoa.pessoa_CPF%></td>
               <td align="left"><b>Emissão:</b></td>
               <td colspan="5"align="left"><%=h @pessoa.pessoa_emissaoCPF %></td>
           </tr>
           <tr bgcolor="#F5F5F5">
               <td align="left" width="4%"><b>Mãe:</b></td>
               <td align="left"><%=h @pessoa.pessoa_mae %></td>
               <td align="left"><b>Fone:</b></td>
               <td align="left"><%=h @pessoa.pessoa_fone_mae %></td></td>
               <td align="left"><b>E-mail:</b></td>
               <td colspan="3"align="left"><%=h @pessoa.pessoa_email_mae %></td></td>
            </tr>
            <tr bgcolor="#F5F5F5">
               <td align="left" width="4%"><b>Pai:</b></td>
               <td align="left"><%=h @pessoa.pessoa_pai %></td>
               <td align="left"><b>Fone:</b></td>        
               <td align="left"><%=h @pessoa.pessoa_fone_pai %></td></td>
               <td align="left"><b>E-mail:</b></td>        
               <td colspan="3" align="left"><%=h @pessoa.pessoa_email_pai%></td></td>
            </tr>

            <tr bgcolor="#F5F5F5">
               <td align="left" width="4%"><b>Endereço:</b></td>
               <td colspan="3" align="left"><%=h @pessoa.pessoa_endereco %> - <%=h @pessoa.pessoa_num %></td>
               <td align="left" width="4%"><b>Complemento:</b></td>
               <td colspan="4" align="left"><%=h @pessoa.pessoa_complemento %></td>
            </tr>
            <tr bgcolor="#F5F5F5">
               <td align="left" width="4%"><b>Bairro:</b></td>
               <td  align="left"><%=h @pessoa.pessoa_bairro %></td>
