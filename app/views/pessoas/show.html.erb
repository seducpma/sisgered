               <td colspan="2" align="left"><%=h @pessoa.pessoa_sexo %></td>
            </tr>
           <tr bgcolor="#F5F5F5">
               <td align="left"><b>Nascimento:</b></td>
               <td colspan="2"align="left">  <%=h @pessoa.pessoa_nascimento.strftime("%d/%m/%Y")%></td>
