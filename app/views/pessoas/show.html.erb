               <td align="left" width="5%"><b>Tipo Cadastro:</b></td>
               <td colspan="7" align="left"><%=h @pessoa.pessoa_tipo %></td>
            </tr>
           <tr bgcolor="#F5F5F5">
               <td align="left" width="4%"><b>Nome:</b></td>
               <td colspan="4" align="left"><%=h @pessoa.pessoa_nome %></td>
