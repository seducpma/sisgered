<div id="interno3">
<% title "ALUNOS".singularize %>
<div class="tabs">
 <div id="caixa_titulo">
     <font size="3"><strong>REPROVAÇÃO ALUNO</strong></font><br/>
 </div>
    <div class="tabs">
       <% form_for @matricula do |f| %>
         <table width="100%">
           <tr bgcolor="#F5F5F5"  width="100%">
              <td align="left" width ="15%"><b> Aluno:</b></td>
              <td align="left"> <%=h @matricula.aluno.aluno_nome%>  &nbsp&nbsp&nbsp&nbsp <b> Nº:</b> <%=h @matricula.classe_num%></td>
           </tr>
             <tr bgcolor="#F5F5F5"  width="100%">
                <td align="left" width ="15%"><b> Unidade:</b></td>
                <td align="left"> <%=h @matricula.unidade.nome%></td>
             </tr>
               <tr bgcolor="#F5F5F5"  width="100%">
                  <td align="left" width ="15%"><b> Classe:</b></td>
                  <td align="left"> <%=h@matricula.classe.classe_classe%> - <%=session[:ano_letivo]%></td>
               </tr>
               <tr bgcolor="#F5F5F5"  width="100%">
                 <td align="left"> <b> Status:</b></td>
                  <td align="left"> <font color="red"> <%= f.check_box :reprovado %><%#= f.check_box :desligado %>  <b>REPROVADO </b></font>  (selecionar esta opção se aluno for reprovado)  </td>
               </tr>
       </table>
       <table>
        <tr>
          <td> <%#= link_to  image_tag('/stylesheets/images/Salvar.png', :title => 'Confirmar Reprovação'), {:controller =>"matriculas", :action => "edit_reprovacao_salvar", :id =>session[:id_reprovado]} , :confirm => 'Confirma REPROVAÇÃO DO ALUNO no ' +(@matricula.classe.classe_classe.to_s) +' / '+(@matricula.ano_letivo.to_s)  ,:method => "get", :title => "Editar"%></td>
          <td align="left"><%= f.submit 'Salvar' %></td>
          <%session[:editar_reprocao]=1%>
          <%session[:alterar_direcionamento_editar] = 0%>
        </tr>
      </table>
       <%end%>
    </div>
</div>
<br/>
</div>
