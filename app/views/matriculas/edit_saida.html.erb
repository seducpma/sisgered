<div id="interno4">
<% title "TRANSFERENCIA".singularize %>
<div class="tabs">
 <div id="caixa_titulo">
     <font size="3"><strong>MATRÍCULA</strong></font><br/>
 </div>
    <div class="tabs">
          <% form_for (@matricula) do |f| %>
           <%= f.error_messages %>
            <font  size="2">
              <br/>
              <table width="100%" align="center" bgcolor="#F5F5F5">
                  <tr> <td></td> </tr>
                  <%if (@matricula.status.nil?) %>
                    <tr>
                      <td><b>Aluno: </b></td>
                      <td> <%=h @matricula.aluno.aluno_nome%> &nbsp&nbsp (<font color="blue"><b>regularmente</b></font> matriculado)</td>
                    </tr>
                  <%else if (@matricula.status == 'TRANSFERIDO')%>
                          <tr>
                             <td><b>Aluno: </b></td>
                             <td> <%=h @matricula.aluno.aluno_nome%> &nbsp&nbsp (TRANSFERIDO <font color="blue"><b> para</b> </font> outra escola)</td>
                          </tr>
                       <%else if (@matricula.status == 'TRANSFERENCIA')%>
                               <tr>
                                  <td><b>Aluno: </b></td>
                                   <td> <%=h @matricula.aluno.aluno_nome%> &nbsp&nbsp (recebido por TRANSFERENCIA <font color="blue"><b> de</b> </font> outra escola)</td>
                               </tr>
                            <%else if (@matricula.status == 'REMANEJADO')%>
                                         <tr>
                                             <td><b>Aluno: </b></td>
                                             <td> <%=h @matricula.aluno.aluno_nome%> &nbsp&nbsp (REMANEJADO <font color="blue"><b>para </b></font> outra classe)</td>
                                         </tr>
                                 <%else if (@matricula.status == '*REMANEJADO')%>
                                            <tr>
                                                <td><b>Aluno: </b></td>
                                               <td> <%=h @matricula.aluno.aluno_nome%> &nbsp&nbsp (REMANEJADO <font color="blue"><b> de </b></font> outra classe)</td>
                                            </tr>
                                       <%end%>
                                 <%end%>
                            <%end%>
                      <%end%>
                  <%end%>
                  <tr> <td></td> </tr>
                  <tr>
                    <td width ="10%"><b>Aluno Nº: </b></td>
                    <td><%= f.text_field :classe_num, :size => '2'%>
                        &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp <b>Classe: </b>
                        &nbsp&nbsp&nbsp&nbsp <%=h @matricula.classe.classe_classe%>

                    </td>
                  </tr>
                  <tr>
                     <td><b>Destino: </b> </td>
                      <td><%= f.text_field :para%></td>
                 </tr>
                 <tr>
                    <td><b>Status: </b></td>
                   <td> <% if @matricula.status.nil? %>
                            Matriculado &nbsp&nbsp&nbsp&nbsp
                        <%else%>
                          <%=h @matricula.status%> &nbsp&nbsp&nbsp&nbsp
                       <%end%>
                          <b> Alterar para: <%= f.collection_select :status , @status_saida, :status, :status %> </b> </td>
                 </tr>                  
                <tr>
                       <td><b>Data Transferência: </b></td><td><%= f.date_select(:data_transferencia, :order => [:day, :month, :year], :start_year => (Date.today.year), :end_year => (Date.today.year)-2)%></td>
                 </tr>
           </table>
              <table>
                 <tr>
                   <td colspan="2">
                     &nbsp<b> OBS:</b>  &nbsp&nbsp&nbsp<font color ="red"><u>TRANSFERIDO</u></font> => Aluno <b>enviado para</b> outra unidade<br/>
                     &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp <font color ="Blue"><u>TRANSFERÊNCIA</u></font> => Aluno <b>recebido de</b> outra unidade<br/>
                     &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp <font color ="green"><u>REMANEJADO</u></font> => Aluno <b>enviado para classe</b> na mesma unidade<br/>
                     &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp <font color ="green"><u>*REMANEJADO</u></font> => Aluno <b>recebido de classe</b> na mesma unidade<br/>

                   </td>
                 </tr>
           </table>
            <table width="100%" >
                <tr> <td><br/></td> </tr>
                   <tr>
                      <td width="4%"align="left"><%= f.submit 'Salvar' %></td>
             <%end%>
                   <td align="left" ><%= button_to 'Fechar', home_path, {:method => "get"}  %></td>
                   </tr>
                 </table>
            </font>
       <br/>
 </div>



</div>

<br/>
</div>

