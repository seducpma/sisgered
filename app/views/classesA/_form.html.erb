    <br/>
    <table width="100%" align="center"  bgcolor="#F5F5F5" >
        <tr>
          <td colspan="4"><b><font size="3">CLASSE</b></td>
        </tr>
        <tr>
          <td colspan="4"><hr></td>
        </tr>

         <tr>

         <tr>
           <td colspan="3">
               <% if (current_user.unidade.tipo.id == 2)or (current_user.unidade.tipo.id == 5) or (current_user.unidade.tipo.id == 8) %>
                 <b>Classe: </b><%= select_tag :num, options_for_select(AulasFalta::NUMI).sort %><%= select_tag :letra, options_for_select(AulasFalta::LETRA).sort %>
