
<table border="1" cellspacing="0" cellpadding="1" width="100%">
  <tr>
    <td><br/>
            <% if @aulas_eventual.present? %>
              <div id="calendar">
                  <%if !@aulas_eventual[0].present? %>
                       <h1><center> <b>NÃƒO existe nada cadastado para esta unidade</b></center> </h1>
                  <%else%>
                        <h1><center> <b><%=  @aulas_eventual[0].unidade.tipo.nome%> <%=  @aulas_eventual[0].unidade.nome%> </b></center> </h1>
                  <%end%>
                <h2 id="month">
                  <%= link_to "<", :month => (@date.beginning_of_month-1).strftime("%Y-%m-%d"), :search => params[:search] %>
                  <%=h @date.strftime("%B %Y") %>
                  <%= link_to ">", :month => (@date.end_of_month+1).strftime("%Y-%m-%d"), :search => params[:search] %>
                </h2>
                <% calendar_for @aulas_eventual, :year => @date.year, :month => @date.month, :search => params[:search] do |calendar| %>
               <%= calendar.head('Domingo', 'Segunda', 'TerÃ§a', 'Quarta', 'Quinta', 'Sexta', 'Sabado') %>
                  <% calendar.day(:day_method => :data) do |date, articles| %>
                    <%= date.day %>
                    <ul>
                      <% for data in articles %>
                        <li><b><font color ="blue"> <%= link_to h(truncate(data.eventual.professor.nome, :length => 28,:omission => "...")), data%></font></b><br/>
                            Classe: <%= link_to h(data.classe.classe_classe), data%><br/>
                            <b>----------------------------</b>
                        </li>

                      <% end %>
                    </ul>
                  <% end %>
                <% end %>
              </div>
            <%end%>
            <br/>
            <table align="right">
              <tr>
                <td align="right" ><%= button_to 'Fechar', home_path, {:method => "get"}  %></td>
                <td width="2%" align="right" ><%= button_to("Imprimir", onclick="javascript:window.print()", :title => "Imprimir") %></td>
                <td width="2%" align="right"></td>
               </tr>
            </table>
       </td>
     </tr>
  </table>

