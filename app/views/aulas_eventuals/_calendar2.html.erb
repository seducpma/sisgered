<% session[:anaja]= 0%> <%= session[:ccaic] = 0 %>
<%= session[:jacy]= 0%>
<table border="1" cellspacing="0" cellpadding="1" width="100%">
  <tr>
    <td><br/>
            <% if @aulas_eventual.present? %>
              <div id="calendar">
                  <%if !@aulas_eventual[0].present? %>
                       <h2><center> <b>NÃO existe nada cadastado para esta unidade</b></center> </h2>
                  <%else%>
                        <h2><center> <b>AGENDA - <%=  @aulas_eventual[0].eventual.professor.nome%> </b></center> </h2>
                        <% session[:eventual_id]= @aulas_eventual[0].eventual_id  %>
                  <%end%>
                <h2 id="month">
                  <%= link_to "<", :month => (@date.beginning_of_month-1).strftime("%Y-%m-%d"), :search => params[:search] %>
                  <%=h @date.strftime("%B %Y") %>
                  <%= link_to ">", :month => (@date.end_of_month+1).strftime("%Y-%m-%d"), :search => params[:search] %>
                </h2>
                <% calendar_for @aulas_eventual, :year => @date.year, :month => @date.month, :search => params[:search] do |calendar| %>
               <%= calendar.head('Domingo', 'Segunda', 'Terça', 'Quarta', 'Quinta', 'Sexta', 'Sabado') %>
                  <% calendar.day(:day_method => :data) do |date, articles| %>
                    <%= date.day %>
                    <ul>
                      <% for data in articles %>
                        <li><b><font color ="blue"> <%= data.unidade.tipo.nome%> <%= data.unidade.nome%></font></b><br/>
                            Classe: <%= data.classe.classe_classe%> (<%= data.periodo%>)
                               <% session[:anaja]=  AulasEventual.find(:all, :select => 'id', :conditions => ['unidade_id = 16 AND eventual_id =?', session[:eventual_id]]).count %>
                               <% session[:ccaic]=  AulasEventual.find(:all, :select => 'id', :conditions => ['unidade_id = 8 AND eventual_id =?', session[:eventual_id]]).count %>
                               <% session[:jacy] =  AulasEventual.find(:all, :select => 'id', :conditions => ['unidade_id = 6 AND eventual_id =?', session[:eventual_id]]).count %>

                            <% if (current_user.has_role?('admin') or current_user.has_role?('SEDUC') )%>
                                &nbsp <%= link_to image_tag("/stylesheets/images/ponto.png", :size => "7x7"), {:action => "destroy", :id =>data}, :confirm => 'Confirma exclusão?', :method => "delete",:title => "Excluir" %>
                            <%end%>



                            <br/>
                            <b>----------------------------</b>
                        </li>

                      <% end %>
                    </ul>
                  <% end %>
                <% end %>
              </div>
            <%end%>
            <table align="left">
              <tr>
                  <td width ="100px" valign="top"><b>Estatística:</b></td>
                  <td width ="100px"><b>Creche:</b><br/>
                           <%if session[:anaja] != 0 %>
                              Anaja = <%= session[:anaja] %>
                           <%end%>
                           <%if  session[:ccaic] != 0 %>
                              Creche CAIC = <%= session[:ccaic] %>
                           <%end%>

                  </td>
                  <td><b>EMEI:</b><br/>
                         <%if session[:jacy] != 0 %>
                            Jacy = <%= session[:jacy] %>
                         <%end%>
                  </td>

               </tr>
            </table>

       </td>
     </tr>
  </table>

