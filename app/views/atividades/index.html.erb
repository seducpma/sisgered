<h1>Listing atividades</h1>

<table>
  <tr>
    <th>Classe</th>
    <th>Professor</th>
    <th>Atribuicao</th>
    <th>Disciplina</th>
    <th>Unidade</th>
    <th>User</th>
    <th>Atividade</th>
    <th>Ano letivo</th>
    <th>Descricao</th>
    <th>Inicio</th>
    <th>Fim</th>
    <th>Obs</th>
    <th>Validacao</th>
    <th>Validado por</th>
    <th>Validado em</th>
  </tr>

<% @atividades.each do |atividade| %>
  <tr>
    <td><%=h atividade.classe_id %></td>
    <td><%=h atividade.professor_id %></td>
    <td><%=h atividade.atribuicao_id %></td>
    <td><%=h atividade.disciplina_id %></td>
    <td><%=h atividade.unidade_id %></td>
    <td><%=h atividade.user_id %></td>
    <td><%=h atividade.atividade %></td>
    <td><%=h atividade.ano_letivo %></td>
    <td><%=h atividade.descricao %></td>
    <td><%=h atividade.inicio %></td>
    <td><%=h atividade.fim %></td>
    <td><%=h atividade.obs %></td>
    <td><%=h atividade.validacao %></td>
    <td><%=h atividade.validado_por %></td>
    <td><%=h atividade.validado_em %></td>
    <td><%= link_to 'Show', atividade %></td>
    <td><%= link_to 'Edit', edit_atividade_path(atividade) %></td>
    <td><%= link_to 'Destroy', atividade, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New atividade', new_atividade_path %>