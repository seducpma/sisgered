<%if @classe.present?%>
  <fieldset>
    <table width="100%">
      <% for classe in @classe %>
        <tr bgcolor="#F5F5F5" >
          <td align="left" width="10%"><b>Unidade:</b></td>
          <td align="left">  <%=h classe.unidade.nome%>    <%  session[:unidade]= classe.unidade.nome %></td>
          <td align="left" width="10%"><b> Ano Letivo:</b></td>
          <td align="left"> <%=h classe.classe_ano_letivo %>     <%  session[:classe]=  classe.id%></td>
        </tr>
        <tr bgcolor="#F5F5F5">
          <td align="left"><b>Classe:</b></td>
          <td align="left">  <%=h classe.classe_classe%></td>
          <td align="left"><b>Horário:</b></td>
          <td align="left">  <%=h classe.horario %></td>
        </tr>
        <tr bgcolor="#F5F5F5" >
          <td align="left"><b>Descrição:</b></td>
          <td align="left" colspan="3"> <%=h classe.classe_descricao %></td>
        </tr>
        <tr bgcolor="#F5F5F5">
          <td valign="top"> <b> Professor(es):</b> </td>
          <% cont=1 %>
          <% cont1=1 %>
          <td colspan="4">  <% for atrib in @atribuicao_classe %>
              <table width="100%">
                <tr bgcolor="#F5F5F5" >
                  <td align="left" width="50%"> <%=h atrib.professor.nome%></td>
                  <td align="left"width="10%"><b> Disciplina:</b></td>
                  <td align="left" width="30%"> <%=h atrib.disciplina.disciplina %></td>
                  <% session[:disciplina] = atrib.disciplina.disciplina %>
                  <% session[:professor] = atrib.professor.nome %>
                  <% session[:professor_id] = atrib.professor.id %>
                  <% session[:classe] = atrib.classe.classe_classe %>
                  <% session[:ano] = atrib.ano_letivo %>
                  <% session[:periodo] = atrib.classe.horario %>
                  <% session[:id] = atrib.id %>
                </tr>
              </table>
              <% cont= cont+1 %>
            <%end%>
          </td>
        </tr>
      </table>
    <%end%>
    <table  border="1" frame="box" rules="all" width="100%">
      <tr bgcolor="#F5F5F5">
        <td width ="78%" colspan="3"><b> Alunos: </b></td>
        <td colspan="2" align="center"><b>1ºBim</b></td>
        <td colspan="2" align="center"><b>2ºBim</b></td>
      </tr>
      <tr bgcolor="#F5F5F5">
        <td width ="4%"align="center"><b>Nº</b></td>
        <td width ="15%">&nbsp&nbsp<b>RA</b></td>
        <td width ="62%">&nbsp&nbsp<b>NOME</b></td>
        <td width ="6%" align="center"><b>Nota</b></td>
        <td width ="6%%"align="center"><b>Faltas</b></td>

        <td width ="6%" align="center"><b>Nota</b></td>
        <td width ="6%"align="center"><b>Faltas</b></td>
        <td width ="9%"align="center">&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</td>
      </tr>
      <tr bgcolor="#F5F5F5">
        <td colspan="8"> <div id="notas_aluno">
            <table border="1" cellspacing="0" cellpadding="1" width="100%">
              <%@notas.each do |nota|%>
                <tr>
                  <td width ="4%" align="center"><%=  cont1%></td>
                  <td width ="10%" ><%= nota.aluno.aluno_ra  %></td>
                  <td width ="57%" align="left">
                        <%if (nota.aluno.trans_in == 1) and (nota.aluno.unidade_id != current_user.unidade_id)%>
                          <%= nota.aluno.aluno_nome %><font color ="red"> (Transf.)</font>
                        <%else%>
                            <%= nota.aluno.aluno_nome %></td>
                        <%end%>
                  <td width ="6%" align="center"><%= nota.nota1 %></td>
                  <td width ="6%" align="center"><%= nota.faltas1 %></td>
                  <td width ="7%" align="center"><%= nota.nota2 %></td>
                  <td width ="8%" align="center"><%= nota.faltas2 %></td>
                  <td width ="6%" align="center"><%= link_to image_tag("/stylesheets/images/lancar1.png"),{:action => "edit", :id =>nota}, :method => "get", :title => "Editar" %></td>
                </tr>
                <% cont1=cont1+1 %>
              <%end%>
            </table>
            <table border="1" cellspacing="0" cellpadding="1" width="100%">
           <% cont2=cont1 %>
              <%@notast.each do |nota|%>
                <tr>
                  <td width ="4%" align="center"><%=  cont2%></td>
                  <td width ="11%" ><%= nota.aluno.aluno_ra  %></td>
                  <td width ="57%" align="left"><%= nota.aluno.aluno_nome %></td>
                  <td width ="6%" align="center"><%= nota.nota1 %></td>
                  <td width ="6%" align="center"><%= nota.faltas1 %></td>
                  <td width ="7%" align="center"><%= nota.nota2 %></td>
                  <td width ="8%" align="center"><%= nota.faltas2 %></td>
                  <td width ="6%" align="center"><%= link_to image_tag("/stylesheets/images/lancar1.png"),{:action => "edit", :id =>nota}, :method => "get", :title => "Editar" %></td>
                </tr>
               <% cont2=cont2+1 %>
              <%end%>
              <tr>
                <td  colspan="7" width="6%"align="left" valign="center" ><%= button_to 'Fechar', home_path, {:method => "get"}  %></td>
              </tr>
            </table>
          </div></td>
      </tr>
    </table>
  <%else%>
    <br/>
    <table  width="100%">
      <tr>
        <td align="center"><font size="3" color="red"><b> NÃO SELECIONADO ou NÃO ENCONTRADO </b> </td>
      </tr>
    </table>
  <%end%>



