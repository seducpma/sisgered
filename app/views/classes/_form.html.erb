<% form_for @classe, :html => { :multipart => true } do |f| %>
 <%= f.error_messages %>
  <font  size="2">
    <br/>
    <table width="100%" align="center"  bgcolor="#F5F5F5" >
        <tr>
          <td colspan="4"><b><font size="3">CLASSE</b></td>
        </tr>
        <tr>
          <td colspan="4"><hr></td>
        </tr>

        <tr>
          <td ><b>Classe: </b><%= f.text_field :classe_classe, :size => 5 %></td>
          <td > <b>Período: </b><%= f.select :horario, Classe::HORARIO %></td>
          <td ><b>Ano Letivo: </b><%= f.text_field :classe_ano_letivo, :size =>5, :value =>"2017" %>
             &nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp <b>Sala: </b><%= f.text_field :sala, :size =>2 %></td>

        </tr>
        
        <% if (current_user.unidade_id < 42) or (current_user.unidade_id > 51) or (current_user.unidade_id != 62)  %>
            <tr>
              <td colspan="4">
                 <font color="gray"> <u><b>EXEMPLO:</u> CLASSE: NI  ou  NII  ou BI  ou BII ou BIII ou MI ou MII   ....  </font> </b>
              </td>
            </tr>
        <%else%>
            <tr>
              <td colspan="4">
                 <font color="gray"><u><b>EXEMPLO:</u> CLASSE: 1 A  ou  1 B  ou 2 A  ou 2 B ou 3 A ou 3 B ....  </font> </b>
              </td>
            </tr>


        <%end%>
        <tr>
          <td colspan="4"><b>Identificação Nº no GDAE (Sistema do Estado SP): </b><%= f.text_field :classe_descricao, :size => 40%></td>
        </tr>

      </table>
      <br/>
    <table width="100%"  align="center">
      <tr>
            <td width="4%"align="left"><%= f.submit 'Salvar' %></td>
<%end%>
            <td><%= button_to 'Fechar', home_path, {:method => "get"}  %></td>
    
  

         </tr>
       </table>
    
    
  </font>





