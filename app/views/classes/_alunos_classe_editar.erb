<table width="100%">
     <% for classe in @classe %>
       <tr bgcolor="#F5F5F5" >
           <td align="left" width="10%"><b>Unidade:</b></td>
           <td align="left">  <%=h classe.unidade.nome%></td>
           <td align="left" width="18%"><b> Ano Letivo:</b></td>
           <td align="left"> <%=h classe.classe_ano_letivo %> <%  session[:classe]=  classe.id%></td>
       </tr>
       <tr bgcolor="#F5F5F5">
           <td align="left"><b>Classe:</b></td>
           <td align="left">  <%=h classe.classe_classe%></td>
           <td align="left"><b>Horário:</b></td>
           <td align="left">  <%=h classe.horario %></td>
      </tr>
        <tr bgcolor="#F5F5F5" >
          <td align="left"><b>Descrição:</b></td>
          <td align="left" colspan="3"> <%=h classe.classe_descricao %></td>
       </tr>
       <tr bgcolor="#F5F5F5">
        <td valign="top"> <b> Professor(es):</b> </td>
        <% cont=1 %>
         <% cont1=1 %>
        <td colspan="4"> <% for atrib in @atribuicao_classe %>
                           <table width="100%">
                              <tr bgcolor="#F5F5F5" >
                                 <td align="left" width="50%">  &nbsp<%= cont%> - <%=h atrib.professor.nome%></td>
                                 <td align="left"width="10%"><b> Disciplina:</b></td>
                                 <td align="left" width="30%"> <%=h atrib.disciplina %></td>
                                 <% if (current_user.has_role?('admin') or current_user.has_role?('SEDUC') or current_user.has_role?('supervisao') or current_user.has_role?('direcao')or current_user.has_role?('secretaria'))%>
                                          <td align="center"><%= button_to 'Editar', { :action => "edit", :controller => "atribuicaos", :id =>atrib}, :method => "get", :title => "Editar"%></td>
                                          <td  align="left" ><%= button_to'Excluir', { :action => "destroy_professor", :id =>atrib}, :confirm => 'Confirma exclusão?', :method => "delete", :title => "Deletar"%></td>
                                  <%end%>
                             </tr>
                           </table>
                          <% cont= cont+1 %>
                         <%end%>

        </td>
      </tr>
      <tr bgcolor="#F5F5F5">
        <td valign="top"> <b> Alunos:</b> </td>
        <td colspan="4">   <% classe.alunos.each do |aluno| %>
                            <table>
                              <tr>
                                <td width="80%"> &nbsp <%= cont1%> -  <%="#{ aluno.aluno_nome}" %> </td>
                                <td width="6%"align="left" ><%= button_to 'Excluir', {:action => "destroy_classe_aluno", :id =>aluno}, :confirm => 'Tem certeza?',:method => "delete", :title => "Deletar"%></td>
                              </tr>
                            </table>
                            <%cont1 = cont1+1%>
                    <%end%>
            </td>
      </tr>
       <tr>
         <td><%=  button_to '', {:action => "edit", :id =>@classe}, :method => "get", :title => "Editar"%></td>
        <td colspan="7"align="right"><br/><%= button_to 'Editar Classe', {:action => "edit", :id =>@classe}, :method => "get", :title => "Editar"%></td>
      </tr>

         <%end%>
</table>

