             <td colspan="4"><%=h @aluno.aluno_restricao %></td>

           </tr>
           <tr bgcolor="#F5F5F5">
              <td width ="17%"><b>Bolsa Família:</b></td>
              <td><%=h @aluno.aluno_bolsa_familia %></td>
