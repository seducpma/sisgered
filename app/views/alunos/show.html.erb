           <tr bgcolor="#F5F5F5">
             <td align="left" ><b>Responsável:</b></td>
              <td colspan="7" align="left"> <%=h  session[:responsavel] %></td>
           </tr>
            <tr bgcolor="#F5F5F5">
               <td align="left" width="4%"><b>Endereço:</b></td>
               <td colspan="3" align="left"><%=h  session[:responsavel]%>, Nº <%=h  session[:responsavel] %> </td>
