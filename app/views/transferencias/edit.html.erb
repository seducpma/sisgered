
<div id="interno4">
<% title "TRANSFERENCIA".singularize %>
<div class="tabs">
 <div id="caixa_titulo">
     <font size="3"><strong>TRANSFERÊNCIA</strong></font><br/>
 </div>
    <div class="tabs">
          <% form_for (@transferencia) do |f| %>
           <%= f.error_messages %>
            <font  size="2">
              <br/>
              <table width="100%" align="center" bgcolor="#F5F5F5">
                  <tr> <td></td> </tr>
                 <tr>
                     <td><b>Aluno: </b></td><td> <%=h @transferencia.aluno.aluno_nome%></td>
                  </tr>
                  <tr>
                    <td width ="16%"><b>Procedência: </b></td><td><%=h @transferencia.de%></td>
                  </tr>
                  <tr>
                    <td width ="16%"><b>Destino: </b></td><td> <%=h @transferencia.unidade.nome%></td>
                  </tr>
 
                   <tr>
                     <td><b>Data Transferência: </b></td><td><%= f.date_select(:data_transferencia, :order => [:day, :month, :year], :start_year => (Date.today.year), :end_year => (Date.today.year)-2)%></td>
                  </tr>
           </table>
            <table width="100%" >
                <tr> <td><br/></td> </tr>
                   <tr>
                      <td width="4%"align="left"><%= f.submit 'Salvar' %></td>
             <%end%>
                   <td width="4%"><%= button_to 'Fechar', home_path, {:method => "get"}  %></td>
              <% if (current_user.has_role?('admin') or current_user.has_role?('SEDUC') or current_user.has_role?('supervisao') or current_user.has_role?('direcao')or current_user.has_role?('secretaria')or current_user.has_role?('pedagogo'))%>
                      <td align="left" ><%= button_to 'Imprimir', onclick="javascript:MM_openBrWindow('#{impressao_ficha_path}','impressao', 'scrollbars=yes');", :title => "Imprimir" %> </b></td>
              <%end%>
                   </tr>
                 </table>

            </font>



       <br/>

 </div>



</div>

<br/>
</div>
