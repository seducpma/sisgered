    <table width="100%">
       <% for trans in @transferencia %>
           <tr bgcolor="#F5F5F5"  width="100%">
              <td align="left" width ="15%"><b> ProcedÃªncia:</b></td>
              <td align="left"> <%=h trans.de%></td>
           </tr>
           <tr bgcolor="#F5F5F5"  width="100%">
              <td align="left" width ="15%"><b> Aluno:</b></td>
              <td  align="left"> <%=h trans.aluno.aluno_nome%></td>
           </tr>
           <% if trans.unidade_id.nil?%>
             <tr bgcolor="#F5F5F5"  width="100%">
                <td align="left" width ="15%"><b> Destino:</b></td>
                <td align="left"> <%=h trans.unidade.nome%></td>
             </tr>
           <%else%>
             <tr bgcolor="#F5F5F5"  width="100%">
                <td align="left" width ="15%"><b> Destino:</b></td>
                <td align="left"> <%=h trans.para%></td>
             </tr>
           <%end%>
           <% if !trans.classe_id.nil? %>
               <tr bgcolor="#F5F5F5"  width="100%">
                  <td align="left" width ="15%"><b> Classe:</b></td>
                  <td align="left"> <%=h trans.classe.classe_classe%></td>
               </tr>
           <%end%>
           <tr bgcolor="#F5F5F5"  width="100%">
              <td align="left" width ="15%"><b> Data:</b></td>
              <td align="left">
                <%if trans.data_transferencia.nil?%>
                    
                <%else%>
                    <%=h trans.data_transferencia.strftime("%d/%m/%Y - %H:%M") %> horas
                <%end%>
              </td>
           </tr>
           <tr>
              <td align="left"><%= button_to '', {:controller =>"transferencias", :action => "edit", :id =>trans}, :method => "get", :title => "Editar"%></td>
              <td align="right"><%= button_to 'Editar', {:controller =>"transferencias", :action => "edit", :id =>trans}, :method => "get", :title => "Editar"%></td>
           </tr>
           <tr>
             <td colspan="3">
               <hr>
             </td>
           </tr>
           
     <%end%>
      </table>




