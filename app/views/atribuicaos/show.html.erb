<% title "ATRIBUICAO" %>
<div class ="tabs">
   <fieldset><legend><font  size=3><b> Atribuição de Aula</b></font></legend>
    <table width="100%">
       <tr bgcolor="#F5F5F5">
         <td width=20%" align="left"><b>Ano Letivo:</b></td>
         <td><%=h @atribuicao.ano_letivo %></td>
      </tr>
      <tr bgcolor="#F5F5F5">
         <td align="left"><b>Classe:</b></td>
         <td align="left" ><%=h @atribuicao.classe.classe_classe%></td>
