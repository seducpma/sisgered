      </tr>
       <tr bgcolor="#F5F5F5">
           <td align="left"><b>Professor:</b></td>
           <td align="left"><%=h @atribuicao.professor.nome%></td>
       </tr>
       <tr bgcolor="#F5F5F5">
           <td align="left"><b>Disciplina:</b></td>
           <td colspan="3"align="left"><%=h @atribuicao.disciplina.disciplina%></td>
       </tr>
       <%if current_user.unidade_id > 40  and  current_user.unidade_id < 52 %>
           <tr bgcolor="#F5F5F5">
               <td align="left"witdh ="5%"><b>Aulas 1º Bim:</b></td>
