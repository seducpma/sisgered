

<table width="100%" align="center" bgcolor="#DCDCDC" >
    <%  @ano_boletim=Classe.find(:all,:select => 'distinct(classe_ano_letivo) as ano', :conditions =>["classe_ano_letivo !=?", Time.now.year],:order => 'classe_ano_letivo DESC')%>
    <tr>
        <td align="right"><font size="2"> <b class="label_busca3">Ano Letivo NOME:</b></font>
            <%= select_tag :ano_letivo1, options_for_select(@ano_boletim.collect { |ff| [ff.ano, ff.ano] }.insert(0, '-Selec.-')) %>
            <%= observe_field 'ano_letivo1',
              :update => "aluno_anterior",
              :url    => { :action => 'boletim_anterior' },
              :with   => 'ano_letivo1' %>

        </td>
        <td width="5%" align="right"><font size="2"> <b class="label_busca3">Aluno:</b></font></td>
        <td width="60%">
            <div id="aluno_anterior">
                <font color="red"> Selecione o ano letivo</font>
            </div>

        </td>
        <td>
            <%= submit_tag "Visualizar", :class => "btn_filtrar" %>
        </td>
    </tr>
</table>
